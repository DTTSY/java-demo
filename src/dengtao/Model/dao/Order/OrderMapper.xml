<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <!-- namespace 绑定对应的dao/mapper接口 -->
<mapper namespace="dengtao.Model.dao.Order.OrderMapper">
  <select id="getOrders" resultType="dengtao.Model.pojo.Order">
    select * from `Order`;
  </select>
  
  <!-- xml中特殊符号需要转译！！-->
  <select id="getOrdersByDate"  parameterType="map" resultType="dengtao.Model.pojo.Order">
    select * from `Order` where `orderDate`&gt;=#{begingDate} and `orderDate`&lt;=#{endDate} and `repayDate` is not null;
  </select>
  
  <select id="getMyOrders" parameterType="string" resultType="dengtao.Model.pojo.Order">
    select * from `Order` where `user`=#{name};
  </select>
  
  <insert id="addOrder" parameterType="map">
  insert into `Order`(`orderDate`, `user`, `carId`, `price`, `city`, `repayDate`, `total`,`days`) values(#{beginDate}, #{user}, #{carId}, #{price}, #{city}, #{endDate}, #{total}, #{rentDays});
  </insert>
  
  <update id="modifyOrder" parameterType="map">
  update `Order` 
  <set>
  	<if test="carId !=null">`carId`=#{carId},</if>
  	<if test="price !=null">`price`=#{price},</if>
  	<if test="user !=null">`user`=#{user},</if>
  	<if test="orderDate !=null"> `orderDate`=#{orderDate},</if>
  	<if test="repayDate !=null">`repayDate`=#{repayDate},</if>
  	<if test="city !=null">`city`=#{city},</if>
  	<if test="days !=null">`days`=#{days},</if>
  	<if test="total !=null"> `total`=#{total}</if>
  </set>
   where `id`=#{id};
  </update>
  
  <delete id="deleteOrder" parameterType="int">
  delete from `Order` where `id`=#{id};
  </delete>
  
</mapper>