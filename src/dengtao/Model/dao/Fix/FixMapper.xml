<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <!-- namespace 绑定对应的dao/mapper接口 -->
 
<mapper namespace="dengtao.Model.dao.Fix.FixMapper">
  <select id="getFixes" resultType="dengtao.Model.pojo.Fix">
    select * from `Fix`
  </select>
  
  <select id="getFixByDate" parameterType="map"  resultType="dengtao.Model.pojo.Fix">
    select * from `Fix` where `fixDate`&gt;=#{begingDate} and `fixedDate`&lt;=#{endDate} and `fixedDate` is not null
  </select>
  
  <select id="getFixsByStatus" resultType="dengtao.Model.pojo.Fix">
    select * from `Fix` where `fixedDate` is null
  </select>
  
  <insert id="addFixs" parameterType="map">
  insert into `Fix`(`carId`, `fixDate`, `F_case`, `price`, `fixedDate`) values(#{carId}, #{fixDate},#{F_case},#{price},#{fixedDate});
  </insert>
  
  <update id="modifyFix" parameterType="map">
  update `Fix` set `F_case`=#{F_case}, `price`=#{F_price},`fixedDate`=#{fixedDate} where `id`=#{id};
  </update>
  
</mapper>